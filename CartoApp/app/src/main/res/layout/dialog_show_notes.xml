<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".ui.InvoiceDetail.ShowNotesF">

    <EditText
        android:id="@+id/etShowNotes"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_margin="@dimen/margin_vertical"
        android:inputType="textPersonName|textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCloseNotes">


    </EditText>

    <ImageView
        android:layout_margin="@dimen/margin_horizontal"
        android:id="@+id/imgCloseNotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/teal_700"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <TextView
        android:id="@+id/tvNotesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notas"
        app:layout_constraintBottom_toTopOf="@+id/etShowNotes"
        app:layout_constraintEnd_toStartOf="@+id/imgCloseNotes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgCloseNotes" />

</androidx.constraintlayout.widget.ConstraintLayout>