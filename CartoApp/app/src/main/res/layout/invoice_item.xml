<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/invoice_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="3dp"
    android:background="@drawable/rounded_corner"
    android:elevation="5dp">


    <TextView
        android:id="@+id/txtDate"
        style="@style/ListTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/9"
        app:layout_constraintStart_toStartOf="@+id/lblDate"
        app:layout_constraintTop_toBottomOf="@+id/lblDate">

    </TextView>

    <TextView
        android:id="@+id/txtDescription"
        style="@style/ListTextValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Probando si un texto esta muy largo "
        app:layout_constraintEnd_toEndOf="@+id/txtSeller"
        app:layout_constraintStart_toStartOf="@+id/lblDescription"
        app:layout_constraintTop_toBottomOf="@+id/lblDescription">

    </TextView>

    <TextView
        android:id="@+id/lblDescription"
        style="@style/ListTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Descripcion"
        app:layout_constraintStart_toStartOf="@+id/lblDate"
        app:layout_constraintTop_toBottomOf="@+id/txtDate" />

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginEnd="104dp"

        android:background="@color/teal_700"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblSeller"
        style="@style/ListTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Proveedor"
        app:layout_constraintStart_toEndOf="@+id/txtDate"
        app:layout_constraintTop_toTopOf="@+id/lblDate" />

    <TextView
        android:id="@+id/txtSeller"
        style="@style/ListTextValue"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:maxLength="20"
        android:text="Gilsa"
        app:layout_constraintStart_toStartOf="@+id/lblSeller"
        app:layout_constraintTop_toBottomOf="@+id/lblSeller" />

    <TextView
        android:id="@+id/txtTotalCost"
        style="@style/ListTextValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:text="$12300"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator"
        app:layout_constraintTop_toTopOf="parent">

    </TextView>


    <TextView
        android:id="@+id/lblDate"
        style="@style/ListTextLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Fecha:"
        app:layout_constraintStart_toEndOf="@+id/vSelectorBar"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDeleteInvoice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/separator"
        app:layout_constraintStart_toEndOf="@+id/txtSeller"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_delete"
        app:tint="@color/black" />

    <View
        android:id="@+id/vSelectorBar"
        android:layout_width="@dimen/margin_horizontal"
        android:layout_height="0dp"
        android:background="@color/teal_700"
        android:elevation="0dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total"
        app:layout_constraintBottom_toTopOf="@+id/txtTotalCost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/separator" />

</androidx.constraintlayout.widget.ConstraintLayout>